@using Sano.Models.DataModels
@model CatUsuarios

@{

    ViewBag.Title = "Administracion de Cuenta";
    var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
    var imgSrc = "";
    if (claimsIdentity != null)
    {
      var imagenUsuario = claimsIdentity.Claims.Where(x => x.Type == "imagenUsuario").Select(x => x.Value).SingleOrDefault();
      imgSrc = String.Format("data:image/gif;base64,{0}", imagenUsuario);
    }

};


<div class="content">
  <div class="container">
    <div class="row">
      <div class="row">
        <div class="col-sm-6">
          <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30">Tus Datos:</h4>
            <div class="row">
              @using (Html.BeginForm("GuardarDatos", "Configuracion", FormMethod.Post, new { id = "DatosUsuario", @role = "form", @class = "form-horizontal", @enctype = "multipart/form-data" }))
              { @*<form class="form-horizontal" role="form">*@
                  <div class="form-group">
                    @Html.LabelFor(m => m.Usuario, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                      @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
                    </div>
                  </div>
                  <div class="form-group">
                    @Html.LabelFor(m => m.Nombre, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                      @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                    </div>
                  </div>
                  <div class="form-group">
                    @Html.LabelFor(m => m.ApellidoPaterno, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                      @Html.TextBoxFor(m => m.ApellidoPaterno, new { @class = "form-control" })
                    </div>
                  </div>
                  <div class="form-group">
                    @Html.LabelFor(m => m.ApellidoMaterno, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                      @Html.TextBoxFor(m => m.ApellidoMaterno, new { @class = "form-control" })
                    </div>
                  </div>
                  <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                      @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                  </div>
                  <div class="form-group">
                    @Html.LabelFor(m => m.FechaNacimiento, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                      @Html.TextBoxFor(m => m.FechaNacimiento, "{0:dd/MM/yyyy}", new { @class = "form-control", data_mask = "99/99/9999" })
                    </div>


                  </div>

                  <div class="form-group" style="text-align:right;padding-right:10px;">
                    <button type="submit" class="btn btn-primary btn-bordred waves-effect w-md waves-light m-b-5">Guardar</button>
                  </div>



                  @*</form>*@
              }
            </div><!-- end row -->
          </div>
        </div><!-- end col -->
        <div class="col-sm-6">
          <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30">Foto de Perfil</h4>
            <div class="dropify-wrapper has-preview"><div class="dropify-message"><span class="file-icon"></span> <p>Drag and drop a file here or click</p><p class="dropify-error">Ooops, something wrong appended.</p></div><div class="dropify-loader" style="display: none;"></div><div class="dropify-errors-container"><ul></ul></div><input class="dropify" data-default-file="@imgSrc" type="file"><button type="button" class="dropify-clear">Remove</button><div class="dropify-preview" style="display: block;"><span class="dropify-render"><img src="@imgSrc"></span><div class="dropify-infos"><div class="dropify-infos-inner"><p class="dropify-filename"><span class="file-icon"></span> <span class="dropify-filename-inner">1.jpg</span></p><p class="dropify-infos-message">Drag and drop or click to replace</p></div></div></div></div>
          </div>
        </div><!-- end col -->
      </div>
    </div>
    <!-- end row -->
  </div>
</div>
